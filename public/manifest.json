{
  "manifest_version": 3,
  "name": "Calert",
  "version": "1.0.0",
  "description": "Never miss a meeting. Calert provides assertive, full-screen notifications for your Google Calendar events.",
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://www.googleapis.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Calert Settings"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "calert_tab.html",
        "calert_tab.css",
        "calert_tab.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}